namespace RugbyApiApp.DTOs
{
    /// <summary>
    /// Response for seasons endpoint - returns just the year as an integer
    /// </summary>
    public class SeasonResponse
    {
        // The API returns just integers (years), not objects
        // When deserializing, RestSharp will map each integer to this class
        // We'll need custom deserialization or change the approach
    }

    /// <summary>
    /// Wrapper for the seasons API response
    /// The response array contains just integers, not SeasonResponse objects
    /// </summary>
    public class SeasonsApiResponse
    {
        public string? Get { get; set; }
        public List<object>? Parameters { get; set; }
        public Dictionary<string, string>? Errors { get; set; }
        public int? Results { get; set; }
        public List<int>? Response { get; set; }  // Just years as integers
    }
}
