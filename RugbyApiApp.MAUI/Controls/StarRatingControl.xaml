<UserControl x:Class="RugbyApiApp.MAUI.Controls.StarRatingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="Auto" Height="Auto">
    <UserControl.Resources>
        <Style x:Key="StarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" FontSize="{TemplateBinding FontSize}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Padding="12" Background="#FFFFFF" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
            <Button x:Name="Star1" Style="{StaticResource StarButtonStyle}" Content="★" Foreground="#FFB800" Click="OnStarClick" Tag="1" Margin="2"/>
            <Button x:Name="Star2" Style="{StaticResource StarButtonStyle}" Content="★" Foreground="#FFB800" Click="OnStarClick" Tag="2" Margin="2"/>
            <Button x:Name="Star3" Style="{StaticResource StarButtonStyle}" Content="★" Foreground="#FFB800" Click="OnStarClick" Tag="3" Margin="2"/>
            <Button x:Name="Star4" Style="{StaticResource StarButtonStyle}" Content="★" Foreground="#FFB800" Click="OnStarClick" Tag="4" Margin="2"/>
            <Button x:Name="Star5" Style="{StaticResource StarButtonStyle}" Content="★" Foreground="#FFB800" Click="OnStarClick" Tag="5" Margin="2"/>
        </StackPanel>
    </Border>
</UserControl>
