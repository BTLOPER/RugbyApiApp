<Window x:Class="RugbyApiApp.MAUI.Views.AddEditVideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Details" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        FontFamily="Segoe UI"
        FontSize="12"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Reuse styles from main window -->
        <Color x:Key="PrimaryColor">#512BD4</Color>
        <Color x:Key="PrimaryDarkColor">#3D1F8A</Color>
        <Color x:Key="SecondaryColor">#DFD8F7</Color>
        <Color x:Key="AccentColor">#00B4D8</Color>
        <Color x:Key="SuccessColor">#22C55E</Color>
        <Color x:Key="DangerColor">#EF4444</Color>
        <Color x:Key="BackgroundColor">#F5F5F5</Color>
        <Color x:Key="SurfaceColor">#FFFFFF</Color>
        <Color x:Key="TextColor">#1F1F1F</Color>
        <Color x:Key="TextSecondaryColor">#757575</Color>
        <Color x:Key="BorderColor">#E0E0E0</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="#512BD4"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#3D1F8A"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#DFD8F7"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00B4D8"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#22C55E"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextBrush" Color="#1F1F1F"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
        </Style>

        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,16">
            <TextBlock Name="WindowTitle" Text="Add Video" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Game Info (Read-only) -->
                <Border Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Œ Game Information" Style="{StaticResource TitleStyle}" Margin="0,0,0,12"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Home Team:" FontWeight="Bold" Margin="0,0,0,4"/>
                                <TextBlock Name="HomeTeamBlock" Text="N/A" Style="{StaticResource BodyStyle}" Margin="0,0,0,12"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Away Team:" FontWeight="Bold" Margin="0,0,0,4"/>
                                <TextBlock Name="AwayTeamBlock" Text="N/A" Style="{StaticResource BodyStyle}" Margin="0,0,0,12"/>
                            </StackPanel>
                        </Grid>
                        <TextBlock Text="Date:" FontWeight="Bold" Margin="0,0,0,4"/>
                        <TextBlock Name="DateBlock" Text="N/A" Style="{StaticResource BodyStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Video Details -->
                <Border Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¬ Video Details" Style="{StaticResource TitleStyle}" Margin="0,0,0,16"/>

                        <!-- Title -->
                        <TextBlock Text="Title:" Style="{StaticResource TitleStyle}" Margin="0,0,0,4"/>
                        <TextBox Name="TitleTextBox" Height="36" Padding="12,8" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"/>

                        <!-- URL -->
                        <TextBlock Text="Video URL:" Style="{StaticResource TitleStyle}" Margin="0,0,0,4"/>
                        <TextBox Name="UrlTextBox" Height="36" Padding="12,8" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"/>

                        <!-- Description -->
                        <TextBlock Text="Description:" Style="{StaticResource TitleStyle}" Margin="0,0,0,4"/>
                        <TextBox Name="DescriptionTextBox" Height="80" Padding="12,8" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Foreground="{StaticResource TextBrush}" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,16"/>

                        <!-- Length -->
                        <TextBlock Text="Length (seconds):" Style="{StaticResource TitleStyle}" Margin="0,0,0,4"/>
                        <TextBox Name="LengthTextBox" Height="36" Padding="12,8" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"/>

                        <!-- Date -->
                        <TextBlock Text="Video Date:" Style="{StaticResource TitleStyle}" Margin="0,0,0,4"/>
                        <TextBox Name="VideoDateTextBox" Height="36" Padding="12,8" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"/>

                        <!-- Rating -->
                        <TextBlock Text="Rating (1-10):" Style="{StaticResource TitleStyle}" Margin="0,0,0,4"/>
                        <TextBox Name="RatingTextBox" Height="36" Padding="12,8" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Foreground="{StaticResource TextBrush}" Margin="0,0,0,20"/>

                        <!-- Checkboxes -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox Name="IsWatchedCheckBox" Content="ðŸ‘ï¸ Mark as Watched" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <CheckBox Grid.Column="1" Name="IsFavoriteCheckBox" Content="â­ Mark as Favorite" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer with Buttons -->
        <Border Grid.Row="2" Background="#FAFAFA" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="SaveButton" Content="ðŸ’¾ Save" Style="{StaticResource PrimaryButtonStyle}" Padding="20,10" Margin="0,0,8,0" Click="OnSaveClicked"/>
                <Button Name="CancelButton" Content="Cancel" Style="{StaticResource SecondaryButtonStyle}" Padding="20,10" Click="OnCancelClicked"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
